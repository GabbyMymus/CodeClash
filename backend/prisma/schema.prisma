generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id                String   @id @default(uuid())
  email             String   @unique
  password          String?
  elo               Int      @default(1200)
  isAdmin           Boolean  @default(false)
  createdAt         DateTime @default(now())
  
  // Relations for friends
  friendsInitiated  Friend[] @relation("FriendshipInitiator")
  friendsReceived   Friend[] @relation("FriendshipReceiver")
}

model Friend {
  id          String   @id @default(uuid())
  userId      String
  friendId    String
  status      String   @default("pending") // "pending", "accepted"
  createdAt   DateTime @default(now())
  
  user        User     @relation("FriendshipInitiator", fields: [userId], references: [id], onDelete: Cascade)
  friend      User     @relation("FriendshipReceiver", fields: [friendId], references: [id], onDelete: Cascade)
  
  @@unique([userId, friendId])
  @@index([userId])
  @@index([friendId])
}

model Problem {
  id          Int      @id @default(autoincrement())
  title       String
  difficulty  String   // "easy", "medium", "hard"
  category    String
  description String   @db.Text
  constraints String   @db.Text
  examples    String   @db.Text
  accepted    Int      @default(0)
  createdAt   DateTime @default(now())
}
